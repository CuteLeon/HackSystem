@page "/"

<DynamicComponent Type="@this.ProgramType"
                  Parameters="@this.ComponentParameter">
</DynamicComponent>

@code {
    Type ProgramType { get; set; }
    ProgramDetail ProgramDetail { get; set; }
    Dictionary<string, object> ComponentParameter { get; set; }

    protected override void OnInitialized()
    {
        this.ProgramType = typeof(HackSystem.Web.TaskSchedule.TaskSchedulerComponent);
        this.ProgramDetail = new()
            {
                Name = this.ProgramType.Name,
                ProgramComponentType = this.ProgramType,
                Z_Index = 1,
            };
        this.ComponentParameter = new()
            {
                { nameof(ProgramComponentBase.PID), 1 },
                { nameof(ProgramComponentBase.ProgramDetail), this.ProgramDetail },
            };

        base.OnInitialized();
    }
}
