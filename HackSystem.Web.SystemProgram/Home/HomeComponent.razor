@inherits ProgramComponentBase

<ResizeableView ResizeableOption="new ResizeableOption() { Left=25, Top=8 }">
    <div class="modal-dialog m-0 flex-fill shadow" role="dialog" style="max-width:none;height:100%;">
        <div class="modal-content border-danger overflow-hidden" style="height: 100%;">
            <DraggableHandleComponent DragTarget=".position-fixed">
                <div class="modal-header border-0 bg-secondary text-white py-2">
                    <h5 class="modal-title" id="exampleModalLabel">Home</h5>
                    <button type="button" class="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </DraggableHandleComponent>
            <div class="modal-body bg-secondary text-center p-0">
                <img src="LogoImage.png" class="img-fluid" />
            </div>
        </div>
    </div>
</ResizeableView>

@code{
    public override void Dispose()
    {
    }
}
