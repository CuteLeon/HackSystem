@page "/"

<DynamicComponent Type="@this.ProgramType"
                  Parameters="@this.ComponentParameter">
</DynamicComponent>

@code {
    Type ProgramType { get; set; }
    ProcessDetail ProcessDetail { get; set; }
    Dictionary<string, object> ComponentParameter { get; set; }

    protected override void OnInitialized()
    {
        this.ProgramType = typeof(HackSystem.Web.TaskSchedule.TaskSchedulerComponent);
        var programDetail = new ProgramDetail(default, this.ProgramType.Name, default, default, default, default, default, default, default)
            {
                ProgramEntryType = this.ProgramType
            };
        this.ProcessDetail = new ProcessDetail(1, programDetail);

        this.ComponentParameter = new()
            {
                { nameof(ProgramComponentBase.ProcessDetail), this.ProcessDetail },
            };

        base.OnInitialized();
    }
}
