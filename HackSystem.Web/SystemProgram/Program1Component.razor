@inherits ProgramComponentBase

<ResizeableView ResizeableOption="new ResizeableOption() { Left=20, Top=5, Z_Index=this.ProgramEntity.Z_Index }">
    <div data-pid="@ProgramEntity.PID" class="modal-dialog m-0 flex-fill shadow" role="dialog" style="max-width:none;height:100%;">
        <div class="modal-content border-primary bg-transparent overflow-hidden" style="height: 100%;">
            <div class="modal-header" style="backdrop-filter:blur(20px);" onmousedown="dragEvents.mouseDragStart(event)" ontouchstart="dragEvents.touchDragStart(event)" data-dragtarget=".position-fixed">
                <h5 class="modal-title" id="exampleModalLabel">标题</h5>
                <button type="button" class="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body bg-white">
                <div class="d-inline-block">
                    <i class="fas fa-4x fa-info-circle text-primary m-2"></i>
                </div>
                <div class="d-inline-block">
                    模态窗口内容，点击背景自动关闭模态窗口。<br />
