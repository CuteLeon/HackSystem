<div class="mt-n5 mx-3 position-relative">
    <figure>
        <img src="@this.IconUrl" class="img-fluid" style="width:75px;height:75px;" />
        <figcaption class="text-white font-weight-bold text-center stretched-link" style="text-shadow: 0px 0px 10px #000;" onmouseover="dockEvents.mouseOverIcon(this)"
                    onmouseout="dockEvents.mouseOutIcon(this)" onmousedown="dockEvents.mouseDownIcon(this)" onmouseup="dockEvents.mouseUpIcon(this)">
            @this.Name
        </figcaption>
    </figure>
</div>

@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string IconUrl { get; set; }
}
